<style>
    .map-container {
        width: 100%;
        /*margin-bottom: 20px;*/
    }

    .map-iframe {
        width: 100%;
        height: 450px;
        border: 0;
    }
</style>

<div id="<%= dom_id map_view %>" class="map-container">
  <iframe src="<%= map_view.url %>"
          class="map-iframe"
          allowfullscreen="true"
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade">
  </iframe>
</div>
<style>

    @media only screen and (max-width: 600px) {
        .map-container {
            max-width: 100%;
        }
    }
</style>