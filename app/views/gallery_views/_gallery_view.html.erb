<div id="<%= dom_id gallery_view %>" class="gallery-container"
     <% if gallery_view.image.attached? %>
        style="background-image: url(<%= rails_blob_path(gallery_view.image) %>);"
     <% end %>>
  <div class="gallery-content">
    <h2 id="gallery-title"><%= gallery_view.title %></h2>
    <p id="gallery-description"><%= gallery_view.description %></p>
    <a href="<%= gallery_view.external_link %>" class="gallery-link">View Gallery</a>
  </div>
</div>

<style>
    .gallery-container {

        display: flex;
        justify-content: center;
        align-items: center;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        padding: 20px;
        width: 70%;
        height: 40vh;
        margin: 0 auto;
        /*margin-bottom: 20px;*/
    }

    .gallery-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        color: white;
        padding: 20px;
        border-radius: 5px;
    }

    #gallery-title {
        font-size: 2em;
        margin-bottom: 10px;
    }

    #gallery-description {
        font-size: 1.2em;
        margin-bottom: 20px;
        text-align: center;
    }

    .gallery-link {
        display: inline-block;
        padding: 10px 20px;
        background-color: white;
        color: black;
        text-decoration: none;
        font-size: 1.2em;
        transition: background-color 0.3s ease-in-out;
    }

    .gallery-link:hover {
        background-color: rgba(255, 255, 255, 0.88);
    }
</style>
