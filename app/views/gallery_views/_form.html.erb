<div class="gallery-view-container">
  <%= form_with(model: gallery_view) do |form| %>
    <% if gallery_view.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(gallery_view.errors.count, "error") %> prohibited this gallery_view from being saved:</h2>

        <ul>
          <% gallery_view.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description %>
    </div>

    <div class="field">
      <%= form.label :external_link, style: "display: block" %>
      <%= form.text_field :external_link %>
    </div>

    <div class="field">
      <%= form.label :image %>
      <%= form.file_field :image, id: :gallery_view_image %>
    </div>

    <div class="actions">
      <%= form.submit "Save", class: "save-button" %>
    </div>
  <% end %>
</div>

<style>
    /* Style for the container */
    .gallery-view-container {
        max-width: 550px;
        margin: 0 auto;
    }

    /* Style for the input fields */
    input[type="text"],
    textarea {
        display: block;
        width: 100%;
        padding: 10px;
        margin-bottom: 30px;
        border: none;
        border-bottom: 1px solid black;
        font-size: 16px;
    }

    /* Style for the file input field */
    input[type="file"] {
        display: block;
        margin-bottom: 10px;
    }

    /* Style for the submit button */
    .save-button {
        display: block;
        width: 30%;
        padding: 10px;
        border: none;
        background-color: green;
        color: white;
        font-size: 16px;
        cursor: pointer;
    }

    /* Style for the submit button when hovered */
    .save-button:hover {
        background-color: #1d941d;
    }

    /* Style for the error messages */
    .error-messages {
        color: red;
    }
</style>
