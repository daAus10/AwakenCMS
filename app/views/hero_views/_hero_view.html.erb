<style>
    #heroview {
        background-size: cover;
        background-position: center;
    }
</style>

<div class="hero-container" id="<%= dom_id hero_view %>">
  <div id="heroview" <% if hero_view.image.attached? %>style="background-image: url(<%= rails_blob_path(hero_view.image) %>);" <% end %>>
    <h1>
      <%= hero_view.title %>
    </h1>
    <div class="content-container">
      <p>
        <%= hero_view.description %>
      </p>
      <button style="background-color: black; border: 2px solid white; color: white; padding: 20px; width: 170px">
        <a style="background-color: black; color: white;  padding: 20px;" href="services"><%= hero_view.button %></a>
      </button>
    </div>
  </div>
</div>
<style>
    .hero-container {
        width: 100%;
        height: 60vh;
        /*max-height: 800px;*/
        /*margin-bottom: 60px;*/

        object-fit: cover;
    }

    #heroview {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        /*padding: 2rem;*/
        width: 100%;
        height: 100%;
        text-align: center;
    }

    #heroview h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    #heroview .content-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    #heroview p {
        margin: 0;
    }

    #heroview strong {
        font-weight: bold;
    }

    .content-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
</style>
