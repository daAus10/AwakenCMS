<div class="hero-container" id="<%= dom_id hero_view %>">
  <div id="heroview" <% if hero_view.image.attached? %>style="background-image: url(<%= rails_blob_path(hero_view.image) %>);" <% end %>>
    <h1>
      <%= hero_view.title %>
    </h1>
    <div class="content-container">
      <p>
        <%= hero_view.description %>
      </p>
      <button>
        <%= hero_view.button %>
      </button>
    </div>
  </div>
</div>

<style>
    .hero-container {
        width: 100%;
        height: 50vh;
        margin-bottom: 60px;

    }

    #heroview {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        padding: 2rem;
        width: 100%;
        height: 100%;
    }

    #heroview h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    #heroview .content-container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    #heroview p {
        margin: 0;
    }

    #heroview strong {
        font-weight: bold;
    }

</style>
