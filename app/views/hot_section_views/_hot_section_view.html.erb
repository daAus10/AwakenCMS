<div id="<%= dom_id hot_section_view %>">
  <p>
    <strong>Image:</strong>
    <%= link_to hot_section_view.image.filename, hot_section_view.image if hot_section_view.image.attached? %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= hot_section_view.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= hot_section_view.description %>
  </p>

  <p>
    <strong>Isvisible:</strong>
    <%= hot_section_view.isVisible %>
  </p>

  <p>
    <strong>Link:</strong>
    <%= hot_section_view.link %>
  </p>

</div>
