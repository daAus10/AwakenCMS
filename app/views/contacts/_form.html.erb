<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :number, style: "display: block" %>
    <%= form.number_field :number %>
  </div>

  <div class="field">
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit "Save", class: "save-button" %>
  </div>
<% end %>

<style>
    /* Style for the container */
    .field {
        max-width: 550px;
        margin: 0 auto;
    }


    /* Style for the input fields */
    input[type="text"],
    input[type="number"],
    textarea {
        display: block;
        width: 100%;
        padding: 50px 0;
        margin-bottom: 30px;
        border: none;
        border-bottom: 1px solid black;
        font-size: 16px;
    }

    /* Style for the save button */
    .save-button {
        display: block;
        width: 30%;
        padding: 10px;
        border: none;
        background-color: green;
        color: white;
        font-size: 16px;
        cursor: pointer;
    }


    /* Style for the save button when hovered */
    .save-button:hover {
        background-color: #1d941d;
    }

    /* Style for the error messages */
    .error-messages {
        color: red;
    }
</style>
