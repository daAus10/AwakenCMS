<div id="flex">
  <p style="color: green"><%= notice %></p>
  <%= render 'layouts/navbar' %>

  <div id="right">
    <h1>Gallery image posts</h1>
    <div class="gallery-image-posts-container">
      <% @gallery_image_posts.each do |gallery_image_post| %>
        <div class="gallery-image-post">
          <%= render gallery_image_post %>
          <p>
            <%= link_to "view", gallery_image_post, class: "gallery-image-post-button" %>
          </p>
        </div>
      <% end %>
    </div>
    <%= link_to "New gallery image post", new_gallery_image_post_path %>
  </div>
</div>

<style>
    .gallery-image-posts-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        padding: 0;
        margin: 0;
    }

    .gallery-image-post {
        flex-basis: calc(33.33% - 10px);
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 5px;
    }

    .gallery-image-post img {
        width: 350px;
        height: 350px;
        object-fit: cover;
    }
    .gallery-image-post-button {
        display: inline-block;
        margin-top: 10px;
        padding: 20px 140px;
        background-color: #000000;
        color: white;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .gallery-image-post-button:hover {
        background-color: #489300;
        text-decoration: none;
        color: white;
    }

    @media (max-width: 768px) {
        .gallery-image-post {
            flex-basis: calc(50% - 10px);
        }
    }

    @media (max-width: 480px) {
        .gallery-image-post {
            flex-basis: 100%;
        }
    }
</style>
