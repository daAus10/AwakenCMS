<p style="color: green"><%= notice %></p>
<div id="flex">
  <p style="color: green"><%= notice %></p>
  <%= render 'layouts/navbar' %>

  <div id="right">
    <h1>Product categories</h1>
    <div id="product_categories" class="flex-container">
      <% @product_categories.each do |product_category| %>
        <div class="product-category-item">
          <%= render product_category %>
          <p>
            <%= link_to "Show this product category", product_category %>
          </p>
        </div>
      <% end %>
    </div>
    <%= link_to "New product category", new_product_category_path %>
  </div>
</div>


<!-- Add the CSS style for flex-container -->
<style>
    .flex-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
    }

    .product-category-item {
        flex: 1;
        margin-right: 10px;
        box-sizing: border-box;
    }
    .category-container {
        display: flex;
        flex-direction: column;
        background-color: black;
        color: white;
        max-width: 60%;
    }

    .category-image {
        object-fit: cover;
        width: 100%;
        height: 300px;
        margin-bottom: 20px;
    }

    .category-title {
        font-size: 24px;
        font-weight: bold;
        text-align: left;
        margin-bottom: 10px;
    }

    .category-description {
        text-align: left;
        margin-bottom: 20px;
    }

    .category-link {
        display: block;
        background-color: black;
        color: white;
        border: 2px solid white;
        padding: 10px;
        width: 90%;
        text-align: center;
        text-decoration: none;
    }

    .category-link:hover {
        background-color: white;
        color: black;
    }

    .center-content {
        margin: auto;
        padding: 20px 20px;
    }

    .contact-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: row;
    }

</style>
