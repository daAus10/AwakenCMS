<div class="review-container">
  <h2>Reviews</h2>

  <div class="review-container-2">
    <% @reviews.each do |review| %>
      <div id="review-canvas">
        <p id="review-p" class="max-lines"><%= review["text"] %></p>
        <br>
        <h3 id="contact-h3"><%= review["author_name"] %></h3>
      </div>
    <% end %>
  </div>
</div>


<style>
    #review-canvas {
        background-color: black;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        /*max-width: 30vw;*/
        text-align: center;
        color: white;
        padding: 25px 25px;
        margin: 20px;
        width: 300px;
        height: 150px;
    }

    .review-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .review-container-2 {
        display: flex;
        flex-wrap: wrap; /* Added to wrap the reviews */
        align-items: center;
        justify-content: center;
    }

    #review-p {
        font-size: small;
        line-height: 15px;
    }

    .max-lines {
        color: white;
        display: block; /* or inline-block */
        text-overflow: ellipsis;
        word-wrap: break-word;
        overflow: hidden;
        max-height: 17.2em;
        /*line-height: 1.8em;*/
        font-style: italic;
    }

</style>



