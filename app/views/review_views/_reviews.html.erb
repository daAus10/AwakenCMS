<div class="review-container">
  <br>
  <br>
  <div style="text-align: center; max-width: 65%; margin: 0 auto;">
  <h2>REVIEWS</h2>
  <br>
  <br>
  <p>Our clients rave about our top-quality skin care services and products at Awaken that help them achieve healthy, glowing skin - see what they have to say.</p>
  <br>
  <br>
  <br>
</div>
  <div class="review-container-2">
    <% @reviews.each do |review| %>
      <div id="review-canvas">
        <p id="review-p" class="max-lines">"<%= review["text"] %>"</p>
        <br>
        <br>
        <p id="contact-h3"><%= review["author_name"] %></p>
      </div>
    <% end %>
  </div>
</div>

<style>
    #review-canvas {
        background-color: black;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        padding: 25px 25px;
        margin: 20px;
        width: 310px;
        height: 170px;
    }

    .review-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    .review-container-2 {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
    }

    #review-p {
        font-weight: lighter;
        line-height: 15px;
    }

    .max-lines {
        color: white;
        display: block;
        word-wrap: break-word;
        overflow: hidden;
        max-height: 7.2em;
        font-style: italic;
        padding-left: 30px;
        padding-right: 30px;
        padding-bottom: 20px;
        text-overflow: clip;
    }

    #contact-h3 {
        font-weight: normal;
        font-size: 19px;
    }

    @media only screen and (max-width: 768px) {
        #review-canvas {
            width: 50%;
            height: auto;
        }
        .review-container-2 {
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        .max-lines {
            max-height: none;
        }
    }

</style>

