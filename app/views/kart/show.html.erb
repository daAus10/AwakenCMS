<turbo-frame id="cart">
  <%= render partial: 'kart/kart', locals: { kart: @kart } %>


  <div class="selected-items-container">
    <h1>Selected Items</h1>
    <hr style="border: 1px solid black; min-width: 230px; overflow: hidden; max-width: 300px">

    <% if @kart.orderables.count > 0 %>
      <% @kart.orderables.each do |orderable| %>
        <% product = orderable.product %>
        <div id="cart_item_<%= orderable.id %>" class="cart-item">
          <div class="product-info">
            <p><%= product.name %></p>
            <p><%= product.price %></p>
            <p><%= product.description %></p>
          </div>

          <%= button_to "Remove", kart_remove_path(orderable.id), method: :delete, remote: true, class: "remove-button" %>
        </div>
      <% end %>
    <% else %>
      <p>Your cart is empty</p>
    <% end %>
  </div>
  <%= render partial: 'appointments/form', locals: { appointment: @appointment } %>

</turbo-frame>

<style>

    .selected-items-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: absolute;
        z-index: 1;
        background-color: #f8f8f8;
        max-width: 650px;
        border: 2px solid black;
        padding: 40px;
        margin-top: 40px;
        margin-right: 30px;
        margin-left: 750px;
        max-height: 260px; /* Adjust the max height value according to your needs */
        overflow-y: auto; /* Add a vertical scrollbar when the content overflows */
    }
    .selected-items-container h1{
        font-weight: bolder;
    }

    /* Style for the remove button */
    .remove-button {
        display: inline-block;
        padding: 5px 10px;
        border: none;
        background-color: red;
        color: white;
        font-size: 14px;
        cursor: pointer;
        text-decoration: none;
    }

    /* Style for the remove button when hovered */
    .remove-button:hover {
        background-color: #b30000;
    }

    /* Style for the list of items */
    .cart-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    /* Style for the product info */
    .product-info {
        display: flex;
