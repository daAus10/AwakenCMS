

<% @kart.orderables.each do |orderable| %>

  <% product = orderable.product %>
  <div id="<%= "cart-#{product.id}" %>">
    <div style="display:flex;justify-content:space-between;margin: 0em 5em;">
      <strong>Name:</strong>
      <%= product.name %>
<!--      <strong>Description:</strong>-->
      <%#= product.description %>
<!--      <strong>Price:</strong>-->
      <%#= product.price %>
<!--      <strong>Total:</strong>-->
      <%#= orderable.total %>
    </div>
  </div>
<% end %>
